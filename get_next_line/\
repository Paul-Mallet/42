#include "get_next_line.h"

int	main(int ac, char **av)
{
	char	*str;
	int	fd;
	int	cl;

	fd = open("line.txt", O_RDONLY);
	if (fd >= 0)
		printf("fd = %d\n", fd);
	if (ac == 2)
	{
		str = ft_strdup(av[1]);
		printf("%s\n", str);
		free(str);
	}
	else
		write(1, "Invalid arguments!", 18);
	cl = close(fd);
	if (cl >= 0)
		printf("Fd closed: %d\n", cl);
	return (0);
}
